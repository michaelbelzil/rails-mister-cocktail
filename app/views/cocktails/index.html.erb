<div class="page-wrapper">
  <div class="banner" style="background-image: url('https://source.unsplash.com/y_-8g9iJvcY/1600x900');">
    <div class="banner-content">
      <h1>The Tender Bartender</h1>
      <p>Time for a Treat</p>
    </div>
  </div>
  <div class="card-wrapper">
    <div class="card-container">
    <% @cocktails.each do |cocktail| %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/lRcoPGrwkv0/500x900');">
        <div class="card-category">
          Popular
        </div>
        <div class="card-description">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          <%if cocktail.ingredients.first.present? %>
            <p> <%= cocktail.ingredients.first.name %> </p>
            <% end %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>



